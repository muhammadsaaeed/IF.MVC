@model iForce.Core.Models.UserViewModel

@{
    ViewBag.Title = "Are you sure you want to delete this?";
}
<h2>Delete</h2>
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">@ViewBag.Title</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="form-horizontal">
                <div>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.UserRoleId)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.RoleString)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.UpdateAt)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.UpdateAt)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.UserStatusId)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.StatusString)
                        </dd>

                    </dl>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <input type="button" data-dismiss="modal" class="btn btn-default" value="Cancel" />
                    
                </div>
            }
        </div>
    </div>
</div>


